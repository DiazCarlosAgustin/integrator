{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api-getaway/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/api-getaway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/api-getaway",
  "projects": {
    "api-getaway": {
      "type": "application",
      "root": "apps/api-getaway",
      "entryFile": "main",
      "sourceRoot": "apps/api-getaway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-getaway/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "parameters": {
      "type": "application",
      "root": "apps/parameters",
      "entryFile": "main",
      "sourceRoot": "apps/parameters/src",
      "compilerOptions": {
        "tsConfigPath": "apps/parameters/tsconfig.app.json"
      }
    }
  }
}